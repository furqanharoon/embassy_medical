<h1>Health Care Record </h1>
<table class="table">
	<tr>
		<th>Passport No.</th>
		<th>Alien Number</th>
		<th>Last Name</th>
		<th>First Name</th>
		<th>Sex</th>
		<th>Exam Date</th>
		<th>Age</th>
		<th>Action</th>
	</tr>
	<% @health_record.each do |h| 
	@age = Date.today.year - h.dob.year %>
	<tr>
		<td><%= h.passport %></td>
		<td><%= h.alien_no %></td>
		<td><%= h.lname %></td>
		<td><%= h.fname %></td>
		<td><%= h.gender %></td>
		<td>Exam</td>
		<td><%= @age %> years</td>
		<td><a href="/health_cares/new?id=<%= h.id %>">Form</a></td>
	</tr>
	<% end %>
</table>