<div class="page-header">
	<h2>Add New Role</h2>
</div>
<div class="page-content">
	<%= form_for :role,:url=>{:action=>"create"} do |f| %>
		<div class="row">
			<div class="col-sm-2">
				Role Name
			</div>
			<div class="col-sm-3">
				<%= f.text_field :role_name %>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-2">
				
			</div>
			<div class="col-sm-3">
				<%= f.submit "Save" %>
			</div>
		</div>
	<% end %>
</div>