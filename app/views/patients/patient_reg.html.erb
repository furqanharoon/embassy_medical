<%= form_for :patient , :url => {:controller => 'patients', :action => 'patient_submit' } do |f| %>

<input type="hidden" value="<%= @patient.id %>" name="patient[id]">
<div class="control-group">
    <label class="control-label">Lab Code</label>
    <div class="controls">
        <input type="text" class="input-xlarge" name="patient[lab_code]" value="<%= @patient.lab_code %>">
    </div>
</div>

<div class="control-group">
    <label class="control-label">Last Name</label>
        <div class="controls">
            <input type="text" class="input-xlarge" name="patient[lname]" value="<%= @patient.lname %>">
        </div>
</div>

<div class="control-group">
    <label class="control-label">First Name </label>
        <div class="controls">
            <input type="text" class="input-xlarge" name="patient[fname]" value="<%= @patient.fname %>">
        </div>
</div>

<div class="control-group">
    <label class="control-label">MI</label>
        <div class="controls">
            <input type="text" class="input-medium" name="patient[midname]" value="<%= @patient.midname %>">
        </div>
</div>

<div class="control-group">
    <label class="control-label">Sex</label>
    <div class="controls">
        <select class="input-large m-wrap" tabindex="1" name="patient[gender]">
            <option value="Male" <%= @patient.gender=='Male' ? 'selected': '' %> >Male</option>  
            <option value="Female" <%= @patient.gender=='Female' ? 'selected': '' %>>Female</option>
        </select>
    </div>
</div>

