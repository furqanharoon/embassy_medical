<div class="control-group">
    <label class="control-label">Birth Country</label>
    <div class="controls">
        <select class="input-large m-wrap" tabindex="1" name="patient[birth_country]">
            <option value="">Select the Country</option>
             <% @countries.each do |c| %>
                <option value="<%= c.country_name %>"<%= @patient.birth_country==c.country_name ? 'selected': ''  %>><%= c.country_name %></option>
            <% end %>
        </select>
    </div>
</div>

<div class="control-group">
    <label class="control-label">Present Country</label>
    <div class="controls">
        <select class="input-large m-wrap" tabindex="1" name="patient[present_country]">
            <option value="0">--Select Country--</option>
            <% @countries.each do |c| %>
                <option value="<%= c.country_name %>" <%= @patient.present_country==c.country_name ? 'selected': ''  %>><%= c.country_name %></option>
            <% end %>
        </select>
    </div>
</div>

<div class="control-group">
    <label class="control-label" style="float:left;">TB Status</label>
    <div class="controls" style="float:left;margin-left:10px;">
        <input type="checkbox" value="1" <%= @patient.tb_status == true ? 'checked' : '' %> name="patient[tb_status]">
    </div>
    <p style="margin-left:10px;">TB Positive</p>
</div> 

<div class="control-group">
    <label class="control-label">Passport No</label>
    <div class="controls">
        <input type="text" class="input-xlarge" name="patient[passport]" value="<%= @patient.passport %>">
    </div>
</div>

<div class="control-group">
    <label class="control-label">Alien No</label>
    <div class="controls">
        <input type="text" class="input-xlarge"  name="patient[alien_no]" value="<%= @patient.alien_no %>">
    </div>
</div>

<div class="control-group">
    <label class="control-label">Visa Type</label>
    <div class="controls">
        <select class="input-large m-wrap" tabindex="1"  name="patient[visa_type]">
            <option value="1" <%= @patient.visa_type==1 ? 'selected': '' %>>None</option>
            <option value="k1" <%= @patient.visa_type=='k1' ? 'selected': '' %>>K1</option>
            <option value="v-92" <%= @patient.visa_type=='v-92' ? 'selected': '' %>>V92</option>
        </select>
    </div>
</div>

<div class="control-group">
    <label class="control-label">Prior Country</label>  
    <div class="controls">
        <select class="input-large m-wrap" tabindex="1" name="patient[prior_country]">
            <option value="">Select the Country</option>
            <% @countries.each do |c| %>
                <option value="<%= c.country_name %>" <%= @patient.prior_country==c.country_name ? 'selected': ''  %> ><%= c.country_name %></option>
            <% end %>



        </select>
    </div>
</div>

<div class="control-group">
    <label class="control-label">Embassy Council Country</label>
    <div class="controls">
        <select class="input-large m-wrap" tabindex="1" name="patient[embassy_country]">
            <option value="">Select the Country</option>
            <% @countries.each do |c| %>
                <option value="<%= c.country_name %>" <%= @patient.embassy_country==c.country_name ? 'selected': ''  %>><%= c.country_name %></option>
            <% end %>



        </select>
    </div>
</div>

<div class="control-group">
    <label class="control-label">Embassy Council City</label>
    <div class="controls">
        <select class="input-large m-wrap" tabindex="1" name="patient[embassy_city]">
            <option value="">Select the City</option>
            <% @cities.each do |c| %>
                <option value="<%= c.city_name %>" <%= @patient.embassy_city==c.city_name ? 'selected': '' %>><%= c.city_name %></option>
            <% end %>


        </select>
    </div>
</div>

<div class="control-group">
    <label class="control-label">Attach Passport:</label>
        <div class="controls">
            <input type="file" name="patient[passport_img]" id="passport_image" accept="image/*">
        </div>
</div>

<div class="control-group">
    <label class="control-label">Attach CNIC:</label>   
    <div class="controls">
        <input type="file" name="patient[nic_img]" id="nic_image" accept="image/*">
    </div>
</div>

<div class="control-group">
    <label class="control-label">Other Document:</label>
    <div class="controls">
        <input type="file" name="patient[other_docs]" id="other_image" accept="image/*">
    </div>
</div>

<div Style="margin-top:20px;margin-bottom:20px">
    <input type="submit" value="Submit">
</div>
<% end %>